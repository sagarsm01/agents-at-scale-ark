FROM python:3.12.9

WORKDIR /app

# Install uv via pip for airgapped compatibility
RUN pip install --no-cache-dir uv

RUN groupadd -r evaluator && useradd -r -g evaluator evaluator

# Copy project files
COPY pyproject.toml uv.lock README.md ./
COPY src/ ./src/
COPY ark_sdk-*.whl ./

WORKDIR /app

# Install dependencies including package and set up non-root user
RUN uv sync --frozen --no-dev && \
    uv pip install -e . && \
    mkdir -p /home/evaluator/.cache/uv && \
    chown -R evaluator:evaluator /app && \
    chown -R evaluator:evaluator /home/evaluator/.cache

USER evaluator

EXPOSE 8000

CMD [".venv/bin/python", "-m", "evaluator"]

